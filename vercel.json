{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "src/pages/api/health.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://ss.bot.prnt.gg/api/$1"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "https://ss.bot.prnt.gg/uploads/$1"
    },
    {
      "src": "/api/health",
      "dest": "/api/health"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_API_URL": "https://ss.bot.prnt.gg",
    "VITE_APP_NAME": "Sensory Smiles",
    "VITE_APP_DESCRIPTION": "Visual scheduling app for children with sensory needs"
  }
}
