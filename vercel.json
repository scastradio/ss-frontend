{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "src/pages/api/health.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://ss.bot.prnt.gg/api/$1"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "https://ss.bot.prnt.gg/uploads/$1"
    },
    {
      "src": "/api/health",
      "dest": "https://ss.bot.prnt.gg/api/health"
    },
    {
      "src": "/(.*\\.(?:js|mjs|jsx|ts|tsx|css|json|svg|png|jpg|jpeg|gif|ico|woff|woff2|ttf|eot))",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      },
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate",
        "Pragma": "no-cache",
        "Expires": "0"
      }
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/(.*\\.(?:js|mjs|jsx|ts|tsx))",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        }
      ]
    },
    {
      "source": "/(.*\\.json)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json"
        }
      ]
    }
  ],
  "env": {
    "VITE_API_URL": "https://ss.bot.prnt.gg",
    "VITE_APP_NAME": "Sensory Smiles",
    "VITE_APP_DESCRIPTION": "Visual scheduling app for children with sensory needs"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}
